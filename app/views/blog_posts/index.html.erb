<h1 class="text-3xl mb-8 font-bold">My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2 class="font-semibold text-2xl text-blue-500 hover:underline"><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
    <% end %>
    <%= blog_post.body %>
  </div>
<% end %>